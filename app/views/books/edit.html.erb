<% if @book.errors.any? %>
 　<%= @book.errors.count %>error
 　<%@book.errors.full_messages.each do |message| %>
   <%= message %>
   <% end %>
<%end %>
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<h3>Editing Book</h3>
<%= form_with model: @book,url:"/books/#{@book.id}", local:true do |f| %>
<h4>title</h4>
<%= f.text_field :title %>
<h4>body</h4>
<%= f.text_area :body%>
<br>
<%= f.submit 'Update Book' %>
<br>
<% end %>
<%= link_to"show" ,book_path(@book.id) %>
 <%= link_to"Back" ,books_path %>

