<h4>Books</h4>
<% if @book.errors.any? %>
 　<%= @book.errors.count %>error
 　<%@book.errors.full_messages.each do |message| %>
   <%= message %>
   <% end %>
<%end %>

<table class= "t-main">
  <thead class= "t-item">
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>
  <tbody class= "t-main2">
    <% @books.each do |book| %>
    <tr class= "t-item2">
       <td><%= book.title %></td>
       <td><%= book.body %></td>
      <td>
        <%= link_to "show" ,book_path(book.id) %>
        <%= link_to "Edit",edit_book_path(book.id)%>
        <%= link_to "Destroy",book_path(book.id), method: :delete %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

</div>

<h3 closs="new">New book</h3>
<%= form_with model: @book, url:'/books', local:true do |f| %>
<h4>title</h4>
<%= f.text_field :title %>
<h4>body</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>

